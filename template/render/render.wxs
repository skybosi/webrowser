/**
 * 处理数据使其返回数组
 */
var toArray = function(array) {
  // console.log(array)
  if (!array) {
    return ['请输入关键字...']
  } else if (array.constructor === 'Array') {
    return array
  } else if (array) {
    return [array]
  } else {
    return ['请输入关键字...']
  }
}

